# oh-my-zsh is required!

export ZSH="/home/nazgo/.oh-my-zsh"

ZSH_THEME="sorin"
plugins=(git)

source $ZSH/oh-my-zsh.sh

# User configuration
export EDITOR="nvim"
export TERM=xterm-256color

alias tmuxd="tmux detach"
alias update="sudo pacman -Syu"
alias search="pacman -Ss"
alias install="sudo pacman -S"
alias remove="sudo pacman -Rcns"
alias installed="pacman -Q | less"

alias bd="cd ~/_ForkPoint/bd-ecommerce && nvm use"
alias cl="cd ~/_ForkPoint/cloudstart && nvm use 10.19"
alias ds="cd ~/_ForkPoint/salesforce"
alias ac="cd ~/_ForkPoint/acne && nvm use"
alias acl="cd ~/_ForkPoint/acne-legacy"
alias acc="code ~/_ForkPoint/acne"

alias ls="exa -la"
alias vim="nvim"
eval $(thefuck --alias fak)

# Git shit
alias personal="GIT_SSH_COMMAND='ssh -i /home/nazgo/.ssh/personal'"
alias fpDevSsh="GIT_SSH_COMMAND='ssh -i /home/nazgo/.ssh/fpDev'"
alias simob="GIT_SSH_COMMAND='ssh -i /home/nazgo/.ssh/simoB'"
alias ai="GIT_SSH_COMMAND='ssh -i /home/nazgo/.ssh/ai'"
alias githardreset="git fetch && git reset --hard @{u}"
alias gitd="git ls-files -m -o --exclude-standard | fzf -m --print0 | xargs -0 -o -t git add"
alias 'git r'="git rebase -i"

[ -z "$NVM_DIR" ] && export NVM_DIR="$HOME/.nvm"
source /usr/share/nvm/nvm.sh
source /usr/share/nvm/bash_completion
source /usr/share/nvm/install-nvm-exec
